generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int    @id @default(autoincrement())
  senha String
  email String @unique
  cpf   String @unique
  ender String
  num   String
  comp  String
}

model Carro {
  id        Int    @id @default(autoincrement())
  marca     String
  modelo    String
  categoria String
  ano       Int
  cor       String
  diaria    Float
  motor     String
  img       String
  status    String
}

model Reserva {
  id         Int      @id @default(autoincrement())
  cpf        String
  email      String
  marca      String
  modelo     String
  categoria  String
  cor        String
  valorTotal String
  retirada   DateTime
  devolucao  DateTime
  status     String
}
